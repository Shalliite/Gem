@model Gem.WebApp.Models.ResetPasswordModel
@{
    ViewData["Title"] = "Reset Password";
}

@using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post))
{
    @if (ViewBag.Message != null)
    {
        <label>@ViewBag.Message</label>
    }
    <br />
    @Html.LabelFor(a => a.VerificationCode)
    <br />
    @Html.TextBoxFor(a => a.VerificationCode, null, new { @class = "form-control" })
    <br />
    @Html.ValidationMessageFor(a => a.VerificationCode, "", new { @class = "text-danger"})

    <br />
    @Html.LabelFor(a => a.Password)
    <br />
    @Html.TextBoxFor(a => a.Password, null, new { @class = "form-control" })
    <br />
    @Html.ValidationMessageFor(a => a.Password, "", new { @class = "text-danger"})

    <br />
    @Html.LabelFor(a => a.ConfirmPassword)
    <br />
    @Html.TextBoxFor(a => a.ConfirmPassword, null, new { @class = "form-control" })
    <br />
    @Html.ValidationMessageFor(a => a.ConfirmPassword, "", new { @class = "text-danger"})

    <br />
    <input type="submit", value="Reset" />

    <br />
}